<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   width="960" height="640" creationComplete="group1_creationCompleteHandler(event)"
				   currentState="game" xmlns:model="com.model.*">
	<fx:Script>
		<![CDATA[
			import com.control.LogControl;
			
			import mx.events.FlexEvent;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				new LogControl(this);
			}
			
			private function gameTimeFormat(item:Object, columu:GridColumn):String{
				return df.format(item.gameTime);
			}
			
			private function gameTimeFormatDuihuan(item:Object, columu:GridColumn):String{
				return df.format(item.duihuanTime);
			}
			
			private function gameTimeFormatChongzhi(item:Object, columu:GridColumn):String{
				return df.format(item.chongzhiTime);
			}
			
			
		]]>
	</fx:Script>
	<s:states>
		<s:State name="jiangpin"/>
		<s:State name="chongzhi"/>
		<s:State name="game"/>
	</s:states>
	<fx:Declarations>
		<s:DateTimeFormatter id="df" dateTimePattern="yyyy/MM/dd HH:mm:ss"/>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:ViewNavigator x="0" y="80" width="960" height="560"
					 title.chongzhi="充值记录"
					 title.game="游戏记录" title.jiangpin="奖品领取记录"/>
	<model:Button id="gameHistoryB" x="0" y="10"
			  skin="@Embed('../../assets/log/gameLog.png')"/>
	<model:Button id="chongzhiHistoryB"
				  skin="@Embed('../../assets/log/chongzhiLog.png')"
				  x="167" y="10"/>
	<model:Button id="prizeHistoryB" skin="@Embed('../../assets/log/jiangpinLog.png')"
				  x="334" y="10"/>
	
	
	<s:DataGrid id="prizeHistory" includeIn="jiangpin" x="0" y="125" width="100%" height="100%" alpha="0.7"
				fontSize="18">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn headerText="ID" dataField="id" width="60"/>
				<s:GridColumn headerText="时间" dataField="duihuanTime" labelFunction="gameTimeFormatDuihuan"/>
				<s:GridColumn headerText="奖品" dataField="itemName"/>
				<s:GridColumn headerText="兑换点数" dataField="duihuanMoney"/>
				<s:GridColumn headerText="联系人" dataField="contactName"/>
				<s:GridColumn headerText="联系电话" dataField="contactTel"/>
				<s:GridColumn headerText="邮寄地址" dataField="contactAddress"/>
				<s:GridColumn headerText="当前状态" dataField="state"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
	<model:Button id="closeB" x="880" y="10" skin="@Embed('../../assets/main/backB.png')" />
	<s:DataGrid id="chongzhiHistory" includeIn="chongzhi" x="0" y="125" width="100%" height="100%" alpha="0.7"
				fontSize="18">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn headerText="ID" dataField="id" width="60"/>
				<s:GridColumn headerText="时间" dataField="chongzhiTime" labelFunction="gameTimeFormatChongzhi" width="130"/>
				<s:GridColumn headerText="充值前点数" dataField="lastHaveMoney"/>
				<s:GridColumn headerText="充值点数" dataField="chongzhiMoney"/>
				<s:GridColumn headerText="充值后点数" dataField="nowHaveMoney"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
	<s:DataGrid id="gameHistory" includeIn="game" x="0" y="125" width="100%" height="100%"
				alpha="0.7" fontSize="18">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn headerText="ID" dataField="sn" width="60"/>
				<s:GridColumn headerText="局号" dataField="gameNo" width="120"/>
				<s:GridColumn headerText="时间" dataField="gameTime" labelFunction="gameTimeFormat" width="130"/>
				<s:GridColumn headerText="游戏前点数" dataField="preMoney" width="80"/>
				<s:GridColumn headerText="输赢" dataField="winLossMoneyAfterTax" width="60"/>
				<s:GridColumn headerText="游戏后点数" dataField="afterMoney" width="80"/>
				<s:GridColumn id="luxiang1" headerText="操作" dataField="luxiang" width="80">
					<s:itemRenderer>
						<fx:Component>
							<s:GridItemRenderer>
								<fx:Script>
									<![CDATA[
										import com.amusement.Mahjong.control.MahjongApplictionControl;
										import com.control.DanjiHomeControl;
										import com.mahjongSyncServer.services.RoomService;
										import com.services.DataService;
										
										import mx.managers.PopUpManager;
										
										protected function button1_clickHandler(event:MouseEvent):void
										{
											// TODO Auto-generated method stub
											
//											navigateToURL(new URLRequest("http://itunes.apple.com/us/app/si-chuan-xue-zhan-ma-jiang/id489426912?l=zh&ls=1&mt=8"),"_blank");
											
//											DanjiHomeControl.instance.danjiHome.operation.visible = false;
											MahjongApplictionControl.instance._mahjongAppliction.mahjongRoom.visible = true;
											DanjiHomeControl.instance.danjiHome.visible = false;
											RoomService.instance.playerVideo(data.gameContent);
											PopUpManager.removePopUp(outerDocument);
										}
										
										protected function button2_clickHandler(event:MouseEvent):void
										{
											// TODO Auto-generated method stub
											DataService.instance.removeGameLog(data.id,data.playerName);
										}
										
									]]>
								</fx:Script>
								<s:HGroup>
									<s:Button label="观看录像" click="button1_clickHandler(event)" />
									<s:Button label="删除" click="button2_clickHandler(event)" />
								</s:HGroup>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer>
				</s:GridColumn>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
	
</s:Group>
