		 width="800" height="450" fontSize="20">
	
	<fx:Script>
		<![CDATA[
			import com.stock.control.BargainControl;
			import com.stock.services.StockSyncService;
			protected function button2_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				if(buyB.selected){
					StockSyncService.getInstance().buy(BargainControl.instance.stock.stockCode,"sooxin",Number(this.wtPrice.text),Number(this.wtNum.text));
				}else{
					StockSyncService.getInstance().sale(BargainControl.instance.stock.stockCode,"sooxin",Number(this.wtPrice.text),Number(this.wtNum.text));
				}
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:TextInput id="wtPrice" x="167" width="141" verticalCenter="-79"/>
	<s:Button x="64" width="100" label="提交" click="button2_clickHandler(event)" verticalCenter="140"/>
	<s:TextInput id="wtNum" x="166" width="105" verticalCenter="-2"/>
	
	<s:RadioButton id="buyB" x="66" y="74" label="买" color="#FF0000" groupName="radiogroup1"
				   selected="true"/>
	<s:RadioButton id="saleB" x="137" y="74" label="卖" color="#FF0000" groupName="radiogroup1"/>
	<s:CheckBox x="65" label="五挡及时成交" verticalCenter="58"/>
