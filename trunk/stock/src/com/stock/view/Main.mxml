<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:view="com.stock.view.*"
				   xmlns:model="com.stock.model.*"
				   width="1024" height="768" backgroundColor="#000000" borderColor="#B00000"
				   creationComplete="bordercontainer1_creationCompleteHandler(event)"
				   currentState="login">
	
	<fx:Script>
		<![CDATA[
			protected function button21_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.operation.visible = true;
			}
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="stockMain"/>
		<s:State name="stockKline"/>
		<s:State name="bshistory"/>
		<s:State name="bag"/>
		<s:State name="login"/>
		<s:State name="regist"/>
		<s:State name="account"/>
	</s:states>
	<fx:Declarations>
		<s:RadioButtonGroup id="radiogroup1"/>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import com.stock.control.BagControl;
			import com.stock.control.BargainControl;
			import com.stock.control.BshistoryControl;
			import com.stock.control.MainControl;
			import com.stock.control.SunKLineControl;
			import com.stock.services.PlayerService;
			import com.stock.services.StockSyncService;
			
			import mx.events.FlexEvent;

			
			protected function bordercontainer1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub

				new MainControl(this);
			}

			protected function button3_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				linechart.scaleX = 1.5;
				linechart.scaleY = 1.5;
			}
			
			protected function button4_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				SunKLineControl.instance.loaddata();
			}
			
			protected function button5_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.currentState = "stockMain";
			}
			
			protected function button6_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.currentState = "stockKline";
			}
			
			protected function backB_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.currentState = "login";
			}
			
			protected function updatePwdBackB_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.currentState = "stockList";
			}
			
		]]>
	</fx:Script>

	<s:BorderContainer id="menuButton" includeIn="bag,bshistory,stockKline,stockMain" x="0" y="0"
					   width="100%" height="50" backgroundAlpha="0.1" backgroundColor="#cccccc"
					   borderColor="#B00000">
		<s:BorderContainer x="0" y="2" width="362" height="40" backgroundColor="#000000"
						   borderColor="#ff0000" cornerRadius="3">
			<s:BitmapImage x="2" alpha="0.9" source="assets/logo.png" verticalCenter="0"/>
			<s:Label x="154" y="5" alpha="0.7" color="#CCCCCC" fontSize="12" text="帐户："/>
			<s:Label x="154" y="22" alpha="0.7" color="#CCCCCC" fontSize="12" text="资产："/>
			<s:Label x="188" y="5" color="#CCCCCC" fontSize="12"
					 text="{PlayerService.instance.player.playerName}"/>
			<s:Label x="188" y="22" color="#CCCCCC" fontSize="12"
					 text="{PlayerService.instance.player.haveMoney}"/>
		</s:BorderContainer>
		<model:Button id="indexB" x="370" y="2" label="主  页">
		</model:Button>
		<model:Button id="accountB" x="480" y="2" label="帐  户">
		</model:Button>
		<model:Button id="zhijinB" x="590" y="2" label="资金股份">
		</model:Button>
		<model:Button id="weituoB" x="700" y="2" label="委托成交">
		</model:Button>
		<model:Button id="bankB" x="810" y="2" label="银  行">
		</model:Button>
		<model:Button id="chongzhiB" x="920" y="2" label="帐户充值">
		</model:Button>
		
	</s:BorderContainer>

	<view:SunKLine includeIn="stockKline" x="0" y="79">
	</view:SunKLine>
	<view:Bshistory includeIn="bshistory" x="0" y="50" alpha="0.7" fontSize="18">
	</view:Bshistory>
	<view:Bag includeIn="bag" x="0" y="50" alpha="0.7">
	</view:Bag>
	
	<s:Image includeIn="login,regist,account" x="0" y="0" source="assets/bg.png"/>
	<s:Label includeIn="login" y="584" color="#B0B0B0" fontSize="14" horizontalCenter="0"
			 text="客服QQ:2694868635   EMAIL:SOOXIN@163.COM  WEBSITE:WWW.SOOXIN.NET"/>
	<s:Label includeIn="login" y="612" color="#B0B0B0" fontSize="14" horizontalCenter="0"
			 text="如有投诉或建议,请联系我们."/>
	<model:Button id="updatePwdBackB" includeIn="account" x="853" y="53" label="返  回"
				  click="updatePwdBackB_clickHandler(event)" selected="true"/>
	<view:Login includeIn="login" horizontalCenter="0" verticalCenter="0">
	</view:Login>
	<view:Regist includeIn="regist" horizontalCenter="0" verticalCenter="0">
	</view:Regist>
	<model:Button id="backB" includeIn="regist" x="853" y="53" label="返  回"
				  click="backB_clickHandler(event)" selected="true"/>
	<view:Account includeIn="account" horizontalCenter="0" verticalCenter="0">
	</view:Account>
	
	<view:StockList id="stockList" includeIn="stockMain" visible="true" x="0" y="50">
	</view:StockList>
	
		
	
	<s:BorderContainer id="stockMenu" includeIn="stockKline,stockMain" visible="true" x="0" y="49"
					   width="824" height="40" backgroundAlpha="0" borderColor="#B00000">
		<model:Button2 x="744" y="-1" label="K线" click="button6_clickHandler(event)"/>
		<model:Button2 x="665" y="-1" label="分时" click="button5_clickHandler(event)"/>
		<s:Label x="10" y="13" color="#FF0000" text="公告：股票大亨即将上市！"/>
		<model:Button2 x="586" y="-1" label="买/卖" click="button21_clickHandler(event)"/>
	</s:BorderContainer>
	<view:Linechart id="linechart" includeIn="stockMain" visible="false" x="0" y="0" scaleX="1.1"
					scaleY="1.2">
	</view:Linechart>
	<view:Bargain id="bargain" includeIn="stockKline,stockMain" visible="true" x="824" y="49">
	</view:Bargain>
	<view:Operation id="operation" includeIn="stockMain" visible="false" x="115" y="249">
	</view:Operation>
	
	<s:BorderContainer id="bottomMenu" includeIn="stockKline,stockMain" x="0" y="700" width="824"
					   height="40" backgroundAlpha="0" borderColor="#ff0000">
		<model:Button2 x="744" y="-1" width="120" label="K线" click="button6_clickHandler(event)"
					   x.stockMain="594" y.stockMain="-1"/>
		<model:Button2 x="665" y="-1" width="120" label="分时" click="button5_clickHandler(event)"
					   x.stockMain="475" y.stockMain="-1"/>
		<model:Button2 x="586" y="-1" width="120" label="买/卖" click="button21_clickHandler(event)"
					   x.stockMain="356" y.stockMain="-1"/>
		<model:Button2 width="120" x="744" y="-1" label="K线" click="button6_clickHandler(event)"
					   x.stockMain="237" y.stockMain="-1"/>
		<model:Button2 width="120" x="665" y="-1" label="分时" click="button5_clickHandler(event)"
					   x.stockMain="118" y.stockMain="-1"/>
		<model:Button2 width="120" x="586" y="-1" label="买/卖" click="button21_clickHandler(event)"
					   x.stockMain="-1" y.stockMain="-1"/>
	</s:BorderContainer>
</s:BorderContainer>
