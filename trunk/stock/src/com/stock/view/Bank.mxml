<?xml version="1.0" encoding="utf-8"?>
<s:Panel xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="800" height="500" creationComplete="panel1_creationCompleteHandler(event)"
		 currentState="loan" title="股票银行">
	<fx:Script>
		<![CDATA[
			import com.stock.control.BankControl;
			
			import mx.events.FlexEvent;
			
			protected function panel1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				new BankControl(this);
			}
			
			protected function button1_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.visible = false;
			}
			
		]]>
	</fx:Script>
	<s:states>
		<s:State name="return"/>
		<s:State name="loan"/>
	</s:states>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:DataGrid id="dg" includeIn="return" x="0" y="0" width="100%" height="100%" color="#000000"
				fontSize="14" fontWeight="normal" rowHeight="40">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn dataField="title" headerText="贷款时间"></s:GridColumn>
				<s:GridColumn dataField="money" headerText="贷款金额"></s:GridColumn>
				<s:GridColumn dataField="lv" headerText="利率(天)"></s:GridColumn>
				<s:GridColumn dataField="days" headerText="贷款时间(天)"></s:GridColumn>
				<s:GridColumn dataField="state" headerText="状态"></s:GridColumn>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
	<s:Button x="717" y="-30" width="80" height="30" label="关 闭" click="button1_clickHandler(event)"/>
	<s:Button id="loanB" x="0" y="-30" width="80" height="30" label="贷 款"/>
	<s:Button id="returnB" x="90" y="-30" width="80" height="30" label="还 款"/>
	<s:Label includeIn="loan" x="50" y="123" text="贷款金额："/>
	<s:Label includeIn="loan" x="50" y="201" text="贷款时间："/>
	<s:Label includeIn="loan" x="50" y="65" text="利率(天)："/>
	<s:Button id="commit" includeIn="loan" x="48" y="285" label="提 交"/>
	<s:Label id="lilvV" includeIn="loan" x="136" y="65" text="标签"/>
	<s:HSlider id="money" includeIn="loan" x="136" y="123" width="500"/>
	<s:HSlider id="days" includeIn="loan" x="136" y="201" width="500" maximum="100" minimum="1"
			   value="1"/>
</s:Panel>
