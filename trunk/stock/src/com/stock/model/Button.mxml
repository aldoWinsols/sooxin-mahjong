<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="100" height="40" creationComplete="group_init(event)">
	<fx:Declarations>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			[Bindable]
			public var label:String = "";
			var _selected:Boolean = false;
			
			public function get selected():Boolean
			{
				return _selected;
			}

			public function set selected(value:Boolean):void
			{
				_selected = value;
				
				if(_selected){
					image.setStyle("backgroundColor","#71DCFF");
				}else{
					image.setStyle("backgroundColor","#000000");
				}
			}
			
			protected function group_init(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				this.addEventListener(MouseEvent.ROLL_OVER, onMouseOver);
				this.addEventListener(MouseEvent.ROLL_OUT, onMouseOut);
			}
			
			protected function onMouseOver(e:MouseEvent):void{
				if(!_selected){
					image.setStyle("backgroundColor","#71DCFF");
				}
			}
			
			protected function onMouseOut(e:MouseEvent):void{
				if(!_selected){
					image.setStyle("backgroundColor","#000000");
				}
			}

		]]>
	</fx:Script>

	<s:BorderContainer id="image" width="100%" height="100%" backgroundColor="#000000" cornerRadius="3">
	</s:BorderContainer>  
	<s:Label color="#EAEAEA" fontWeight="normal" horizontalCenter="0" text="{this.label}"
			 verticalCenter="0"/>
</s:Group>
