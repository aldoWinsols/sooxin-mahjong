<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="960" height="100%" creationComplete="group1_creationCompleteHandler(event)"
		 height.check="100%">
	<fx:Script>
		<![CDATA[
			import com.control.DuihuanControl;
			
			import mx.events.FlexEvent;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				new DuihuanControl(this);
				
				contactNameErr.setStyle('color','Red');
				contactTelErr.setStyle('color','Red');
				this.contactAddressErr.setStyle('color','Red');
			}
			
		]]>
	</fx:Script>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		
	</fx:Style>
	<s:states>
		<s:State name="main"/>
		<s:State name="check"/>
	</s:states>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>

	<s:ViewNavigator x="0" y="0" width="100%" height="100%" title="领取礼品"/>
	<s:BorderContainer width="100%" height="100%" backgroundAlpha="0.3" backgroundColor="#72D2FE"
					   y.check="45" height.check="100%"
					   x.main="0" y.main="75">
		
	</s:BorderContainer>
	<s:BorderContainer id="duihuan" includeIn="check" visible="true" x="10" y="54" width="925"
					   height="490" backgroundAlpha="0.5" borderVisible="false" cornerRadius="8">
		<s:TextInput id="contactName" x="161" y="157"/>
		<s:TextInput id="contactTel" x="161" y="210"/>
		<s:TextArea id="contactAddress" x="161" y="263" width="506" height="107"/>
		<s:Button id="checkB" x="161" y="418" width="100" label="提交"/>
		<s:Label x="81" y="167" text="联系人："/>
		<s:Label x="63" y="220" text="联系电话："/>
		<s:Label x="63" y="273" text="邮寄地址："/>
		<s:Label x="77" y="49" text="奖品名称："/>
		<s:Label id="jingpinName" x="175" y="49" text="标签"/>
		<s:Label x="77" y="83" text="兑换点数："/>
		<s:Label id="jiangpinDianshu" x="175" y="83" text="标签"/>
		<s:Button id="cancelB" x="293" y="418" width="100" label="取消"/>
		<s:Label id="contactNameErr" x="469" y="167" styleName=""/>
		<s:Label id="contactTelErr" x="469" y="220"/>
		<s:Label id="contactAddressErr" x="161" y="378"/>
		
	</s:BorderContainer>
	<s:DataGrid id="dg" includeIn="main" x="0" y="45" width="960" height="100%" alpha="0.7"
				color="#000000" fontSize="20" fontWeight="bold" rowHeight="100">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn headerText="图片" >
					<s:itemRenderer >
						<fx:Component> 
							<s:GridItemRenderer>
								<fx:Script>
									<![CDATA[
										import com.services.RemoteService;
									]]>
								</fx:Script>
								<s:HGroup left="3" verticalCenter="0">
									<s:Image source="{RemoteService.instance.mainUrl+'panda/'+data.imgurl}"/>
								</s:HGroup>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer> 
				</s:GridColumn>
				<s:GridColumn dataField="shangpinName" headerText="礼品名称">
					<s:itemRenderer >
						<fx:Component> 
							<s:GridItemRenderer>
								<s:HGroup left="3" verticalCenter="0">
									<s:Label text="{data.shangpinName}"/>
								</s:HGroup>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer>
				</s:GridColumn>
				<s:GridColumn dataField="dNum" headerText="兑换点数">
					<s:itemRenderer >
						<fx:Component> 
							<s:GridItemRenderer>
								<s:HGroup left="3" verticalCenter="0">
									<s:Label text="{data.price}"/>
								</s:HGroup>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer>
				</s:GridColumn>
				<s:GridColumn dataField="remark" headerText="备注">
					<s:itemRenderer >
						<fx:Component> 
							<s:GridItemRenderer>
								<s:HGroup left="3" verticalCenter="0">
									<s:Label text="{data.introdunce}"/>
								</s:HGroup>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer>
				</s:GridColumn>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>

	
</s:Group>
