<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark" width="960" height="100%" creationComplete="group1_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			import com.control.DuihuanControl;
			
			import mx.events.FlexEvent;
			
			protected function group1_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				new DuihuanControl(this);
				
				contactNameErr.setStyle('color','Red');
				contactTelErr.setStyle('color','Red');
				this.contactAddressErr.setStyle('color','Red');
			}
			
		]]>
	</fx:Script>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		
	</fx:Style>
	<s:states>
		<s:State name="main"/>
		<s:State name="check"/>
	</s:states>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>

	<s:ViewNavigator x="0" y="0" width="100%" height="100%" title="领取礼品" />
	<s:BorderContainer id="duihuan" includeIn="check" visible="true" x="10" y="54" width="925"
					   height="498" backgroundAlpha="0.9" borderVisible="false" cornerRadius="8">
		<s:TextInput id="contactName" x="163" y="79"/>
		<s:TextInput id="contactTel" x="163" y="132"/>
		<s:TextArea id="contactAddress" x="163" y="185" width="506" height="107"/>
		<s:Button id="checkB" x="163" y="350" width="100" label="提交"/>
		<s:Label x="83" y="89" text="联系人："/>
		<s:Label x="65" y="142" text="联系电话："/>
		<s:Label x="65" y="195" text="邮寄地址："/>
		<s:Label x="10" y="10" text="奖品名称："/>
		<s:Label id="jingpinName" x="108" y="10" text="标签"/>
		<s:Label x="241" y="10" text="奖品点数："/>
		<s:Label id="jiangpinDianshu" x="339" y="10" text="标签"/>
		<s:Button id="cancelB" x="295" y="350" width="100" label="取消"/>
		<s:Label id="contactNameErr" x="471" y="89" styleName=""/>
		<s:Label id="contactTelErr" x="471" y="142"/>
		<s:Label id="contactAddressErr" x="163" y="300"/>
		
	</s:BorderContainer>
	<s:DataGrid id="dg" includeIn="main" x="0" y="44" width="960" height="100%" alpha="0.7"
				color="#000000" fontSize="22" fontWeight="bold" rowHeight="80">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn headerText="图片" >
					<s:itemRenderer >
						<fx:Component> 
							<s:GridItemRenderer>
								<s:Image source="{data.imgurl}"/>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer> 
				</s:GridColumn>
				<s:GridColumn dataField="shangpinName" headerText="礼品名称">
					<s:itemRenderer >
						<fx:Component> 
							<s:GridItemRenderer>
								<s:HGroup  verticalCenter="0">
									<s:Label text="{data.shangpinName}"/>
								</s:HGroup>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer>
				</s:GridColumn>
				<s:GridColumn dataField="dNum" headerText="兑换点数">
					<s:itemRenderer >
						<fx:Component> 
							<s:GridItemRenderer>
								<s:HGroup  verticalCenter="0">
									<s:Label text="{data.price}"/>
								</s:HGroup>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer>
				</s:GridColumn>
				<s:GridColumn dataField="remark" headerText="备注">
					<s:itemRenderer >
						<fx:Component> 
							<s:GridItemRenderer>
								<s:HGroup  verticalCenter="0">
									<s:Label text="{data.introdunce}"/>
								</s:HGroup>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer>
				</s:GridColumn>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>

	
</s:Group>
