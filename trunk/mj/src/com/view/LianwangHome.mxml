<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:view="com.view.*"
				   xmlns:model="com.model.*"
				   width="960" height="640" backgroundAlpha="0" borderVisible="false"
				   cornerRadius="10"
				   creationComplete="bordercontainer2_creationCompleteHandler(event)"
				   currentState="main">
		
	<fx:Script>
		<![CDATA[
			import com.control.DuihuanControl;
			import com.control.LianwangHomeControl;
			import com.control.RoomListControl;
			import com.model.MainPlayer;
			import com.services.MainPlayerService;
			
			import mx.events.FlexEvent;
			
			import spark.events.ElementExistenceEvent;
			

			
			protected function bordercontainer2_creationCompleteHandler(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				new LianwangHomeControl(this);
			}
			
			protected function image1_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.currentState = "chongzhi";
			}
			
			protected function image2_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.currentState = "duihuan";
				try{
					DuihuanControl.instance.getShangpin();
				}catch(e:Error){
					
				}
				
			}
			
			protected function image3_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.currentState = "main";
				try{
					RoomListControl.instance.getRooms();
				}catch(e:Error){
					
				}
			}
			
			protected function button1_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				this.currentState = "log";
			}
			
		]]>
	</fx:Script>
	
	<s:states>
		<s:State name="main"/>
		<s:State name="chongzhi"/>
		<s:State name="duihuan"/>
		<s:State name="log"/>
	</s:states>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	
	<view:Chongzhi includeIn="chongzhi" x="0" y="90">
	</view:Chongzhi>
	<view:Duihuan includeIn="duihuan" x="0" y="90">
	</view:Duihuan>
	<s:Image x="0" y="10" width="70" height="70" source="assets/head.png"/>
	<s:Label x="78" y="12" color="#FFFFFF" fontWeight="bold" text="用户："/>
	<s:Label x="78" y="44" color="#FFFFFF" fontWeight="bold" text="点数："/>
	<s:Label id="playerName" x="128" y="14" color="#FFFFFF" fontWeight="bold"
			 text="{MainPlayerService.getInstance().mainPlayer.playerName}"/>
	<s:Label id="haveMoney" x="128" y="46" color="#FFFFFF" fontWeight="bold"
			 text="{MainPlayerService.getInstance().mainPlayer.haveMoney}"/>
	
	<model:Button click="image2_clickHandler(event)" skin="@Embed('assets/main/liwuB.png')"
			 x="692" y="10"/>
	<model:Button click="image1_clickHandler(event)" skin="@Embed('assets/main/chongzhiB.png')"
			 x="790" y="10"/>
	<model:Button id="backB" x="880" y="10" skin="@Embed('assets/main/backB.png')"
				  x.log="888" y.log="10"/>
	<model:Button click="button1_clickHandler(event)" skin="@Embed('assets/main/logB.png')"
			 x="589" y="10"/>
	<model:Button x="489" y="10" click="image3_clickHandler(event)"
				  skin="@Embed('assets/main/roomB.png')"/>
	<view:Log includeIn="log" x="0" y="90">
	</view:Log>
	<view:RoomList includeIn="main" x="0" y="90">
	</view:RoomList>
	<view:NetworkQuality id="network" includeIn="main" x="750" y="104">
	</view:NetworkQuality>
</s:BorderContainer>
