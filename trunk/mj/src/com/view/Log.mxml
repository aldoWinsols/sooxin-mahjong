				<s:GridColumn id="luxiang1" headerText="錄像操作" dataField="luxiang" width="80">
					<s:itemRenderer>
						<fx:Component>
							<s:GridItemRenderer>
								<LinkButton horizontalCenter="0" verticalCenter="0" label="查看錄像" fontWeight="bold" click="outerDocument.linkbutton1_clickHandler(event)"/>
							</s:GridItemRenderer>
						</fx:Component>
					</s:itemRenderer>
				</s:GridColumn>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
