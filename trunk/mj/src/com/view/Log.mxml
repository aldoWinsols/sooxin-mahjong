				fontSize="13">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn headerText="ID" dataField="sn" width="60"/>
				<s:GridColumn headerText="時間" dataField="gameTime" labelFunction="gameTimeFormat" width="130"/>
				<s:GridColumn headerText="遊戲前點數" dataField="preMoney" width="80"/>
				<s:GridColumn headerText="充值点数" dataField="winLossMoneyAfterTax" width="60"/>
				<s:GridColumn headerText="充值后点数" dataField="afterMoney" width="80"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
	<s:DataGrid id="gameHistoryGird1" includeIn="game" x="12" y="61" width="778" height="413"
				fontSize="13">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn headerText="ID" dataField="sn" width="60"/>
				<s:GridColumn headerText="局號" dataField="gameNo" width="120"/>
				<s:GridColumn headerText="時間" dataField="gameTime" labelFunction="gameTimeFormat" width="130"/>
				<s:GridColumn id="gameContent1" headerText="遊戲內容" dataField="gameContent" width="160"/>
