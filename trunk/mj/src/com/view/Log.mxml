	</fx:Declarations>
	<s:Button x="10" y="10" label="游戏记录"/>
	<s:Button x="107" y="10" label="充值记录"/>
	<s:Button x="204" y="10" label="奖品领取记录"/>
	
	
	<s:DataGrid id="gameHistoryGird" includeIn="jiangpin" x="12" y="61" width="778" height="413"
				fontSize="13">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn headerText="ID" dataField="sn" width="60"/>
				<s:GridColumn headerText="時間" dataField="gameTime" labelFunction="gameTimeFormat" width="130"/>
				<s:GridColumn id="gameContent" headerText="奖品" dataField="gameContent" width="160"/>
				<s:GridColumn headerText="联系人" dataField="afterMoney" width="80"/>
				<s:GridColumn headerText="邮寄地址" dataField="preMoney" width="80"/>
				<s:GridColumn headerText="联系电话" dataField="winLossMoneyAfterTax" width="60"/>
