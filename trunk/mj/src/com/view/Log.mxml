<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 width="800" height="480" currentState="game">
	<s:states>
		<s:State name="jiangpin"/>
		<s:State name="chongzhi"/>
		<s:State name="game"/>
