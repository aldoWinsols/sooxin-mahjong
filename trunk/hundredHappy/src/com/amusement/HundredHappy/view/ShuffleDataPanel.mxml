	<fx:Script>
		<![CDATA[
			import com.service.PlayerService;
			import com.service.RemoteService;
			
			import mx.controls.Alert;
			
			public function linkbutton2_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				if(event.currentTarget.label != ""){
					System.setClipboard(event.currentTarget.label);
					Alert.show("密碼複製成功！");
				}
			}
			
			public function downloadData(url:String, gameNo:String):void{
				// TODO Auto-generated method stub
				navigateToURL(new URLRequest(url));
				RemoteService.instance.resourceService.recordBjlDownload(PlayerService.instance.player.acctName, gameNo, url);
			}
		]]>
	</fx:Script>
