<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" width="566" height="80">
	
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var title:String;
			
			[Bindable]
			public var content:String;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:Image width="81" height="78"/>
	<s:Label x="90" text="{title}"/>
	<s:Label width="82" height="78" fontSize="20"
			 text="{title}" textAlign="center" verticalAlign="middle"/>
	<s:TextArea x="90" y="20" width="466" height="61" text="{content}"/>
</s:Group>
